{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="jumbotron">
        <div class="example-wrapper">
            <h1 class="display-3 text-center"><font style = "vertical-align: inherit;"> <font style = "vertical-align: inherit;">Espace de connexion administrateur</font></font></h1>
            <hr>
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <input placeholder="Identifiant" required name="_username" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
                </div>
                <div class="form-group container text-center">
                    <button type="submit" class="btn btn-success">Connexion</button>
                </div>
            </form>
        </div>
    </div>
    
{% endblock %}