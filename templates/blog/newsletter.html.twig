{% extends 'base.html.twig' %}

{% form_theme formNewsletterMember 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <style>
		.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
		.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
	</style>

    <div class="example-wrapper">
        <div class="jumbotron">
            <h1 class="text-center">Inscription à notre Newsletter</h1>
            <hr>

            {{ form_start(formNewsletterMember) }}
            
            {{ form_row(formNewsletterMember.firstname, {'label': "Prénom", 'attr': {'placeholder': "Votre prénom" } }) }}
            {{ form_row(formNewsletterMember.lastname, {'label': "Nom", 'attr': {'placeholder': "Votre nom" } }) }} 
            {{ form_row(formNewsletterMember.email, {'label': "Email", 'attr': {'placeholder': "Votre email" } }) }}
            
            <button type="submit" class="btn btn-success container text-center">
                    S'inscrire
            </button>
            {{ form_end(formNewsletterMember)}}
        </div>
    </div>
    
{% endblock %}