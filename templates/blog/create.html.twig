{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block head %}<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
  <script>tinymce.init({selector:'textarea'});</script>{% endblock %}

{% block body %}
    <style>
		.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
		.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
	</style>

    <div class="example-wrapper">
        <div class="jumbotron">
            <h1 class="text-center">Création d'un article !</h1>
            <hr>

            {{ form_start(formArticle) }}
            
            {{ form_row(formArticle.title, {'label': "Titre de l'article", 'attr': {'placeholder': "Titre de l'article" } }) }}
            {{ form_row(formArticle.category, {'label': "Catégorie de l'article", 'attr': {'placeholder': "Choix de la catégorie" } }) }} 
            {{ form_row(formArticle.content, {'label': "Contenu de l'article", 'attr': {'placeholder': "Contenu de l'article" } }) }}
            {{ form_row(formArticle.image, {'attr': {'placeholder': "URL de l'image"} }) }}
            {{ form_row(formArticle.author, {'label': "Auteur",'attr': {'placeholder': "Auteur"} }) }}
            
            <button type="submit" class="btn btn-success container text-center">
                {% if editMode %}
                    Enregistrer les modifications
                {% else %}
                    Ajouter l'article
                {% endif %}
            </button>
            {{ form_end(formArticle)}}
        </div>
    </div>
    
{% endblock %}